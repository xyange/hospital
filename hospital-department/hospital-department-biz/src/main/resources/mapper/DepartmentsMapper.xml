<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wyzy.hospital.department.mapper.DepartmentsMapper">

  <resultMap id="departmentsMap" type="com.wyzy.hospital.department.entity.Departments">
                  <id property="id" column="id"/>
                        <result property="departmentName" column="department_name"/>
                        <result property="superiorId" column="superior_id"/>
                        <result property="createTime" column="create_time"/>
                        <result property="updateTime" column="update_time"/>
  </resultMap>

	<select id="selectBySuperiorId" resultMap="departmentsMap">
		select id,department_name,superior_id,create_time,update_time from departments where superior_id = #{superiorId}
	</select>

	<select id="selectNumberBySuperiorId" resultType="java.lang.Integer">
		select COUNT(*) from departments where superior_id = #{id}
	</select>

	<select id="listDepartmentByName" resultMap="departmentsMap">
		SELECT d.id,d.superior_id,d.department_name FROM departments d
		<where>
			<if test="name != null and name != ''">
				<bind name="namePattern" value="'%' + name + '%'"/>
				d.department_name LIKE #{namePattern}
			</if>
		</where>
	</select>

	<select id="listAllDepartment" resultMap="departmentsMap">
		select id,department_name,superior_id,create_time,update_time from departments
	</select>

</mapper>
