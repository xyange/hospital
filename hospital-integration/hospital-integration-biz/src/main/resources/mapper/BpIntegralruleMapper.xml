<?xml version="1.0" encoding="UTF-8"?>



<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wyzy.hospital.integration.mapper.BpIntegralruleMapper">

  <resultMap id="bpIntegralruleMap" type="com.wyzy.hospital.integration.entity.BpIntegralrule">
                  <id property="id" column="id"/>
                        <result property="integralMethod" column="integral_method"/>
                        <result property="checkstatus" column="checkStatus"/>
                        <result property="number" column="number"/>
                        <result property="continuously" column="continuously"/>
                        <result property="paymentAmount" column="payment_amount"/>
                        <result property="highestScore" column="highest_score"/>
                        <result property="expirationRules" column="expiration_rules"/>
                        <result property="time" column="time"/>
                        <result property="days" column="days"/>
                        <result property="reminder" column="reminder"/>
                        <result property="deduction" column="deduction"/>
                        <result property="integral" column="integral"/>
                        <result property="money" column="money"/>
	  <result property="isEveryday" column="is_everyday"/>
	  <result property="quantityLimit" column="quantity_limit"/>
	  <result property="createTime" column="create_time"/>
	  <result property="updateTime" column="update_time"/>
  </resultMap>

	<resultMap id="bpIntegralruleDTO" type="com.wyzy.hospital.integration.dto.BpIntegralruleDTO">
		<id property="id" column="id"/>
		<result property="integralMethod" column="integral_method"/>
		<result property="checkstatus" column="checkStatus"/>
		<result property="number" column="number"/>
		<result property="continuously" column="continuously"/>
		<result property="paymentAmount" column="payment_amount"/>
		<result property="highestScore" column="highest_score"/>
		<result property="expirationRules" column="expiration_rules"/>
		<result property="time" column="time"/>
		<result property="days" column="days"/>
		<result property="reminder" column="reminder"/>
		<result property="deduction" column="deduction"/>
		<result property="integral" column="integral"/>
		<result property="money" column="money"/>
		<result property="isEveryday" column="is_everyday"/>
		<result property="quantityLimit" column="quantity_limit"/>
	</resultMap>

	<resultMap id="everyDayDTO" type="com.wyzy.hospital.integration.dto.EveryDayDTO">
		<id property="id" column="id"/>
		<result property="integralMethod" column="integral_method"/>
		<result property="checkstatus" column="checkStatus"/>
		<result property="number" column="number"/>
		<result property="continuously" column="continuously"/>
		<result property="quantityLimit" column="quantity_limit"/>
		<result property="num" column="num"/>
	</resultMap>

	<update id="updateIsEverydayById">
		UPDATE bp_integralrule SET is_everyday = #{isEveryday} WHERE id = #{id}
	</update>
	<select id="selectPojoByIsEveryday" resultMap="everyDayDTO">
		SELECT
			inte.id,inte.integral_method,inte.checkStatus,inte.quantity_limit,num.num,inte.number,inte.continuously
		FROM
			(SELECT id,integral_method,quantity_limit,number,continuously,checkStatus from bp_integralrule where is_everyday = 1 and del_flag = 0) inte
			LEFT JOIN
			(SELECT type_id,COUNT(*) as num from bp_integral WHERE  create_time like concat(#{date},'%') and member_id = #{memberId} group by type_name) num
		ON num.type_id = inte.id
	</select>
	<select id="selectNewestState" resultMap="bpIntegralruleMap">
		select  b.id,b.integral_method,b.checkStatus,b.number,b.continuously,b.payment_amount,b.highest_score,
				b.expiration_rules,b.time,b.days,b.reminder,b.deduction,b.integral,b.money,b.is_everyday,
				b.quantity_limit,b.create_time,b.update_time
		from bp_integralrule as b
		where  b.update_time = (select max(i.update_time) from bp_integralrule i)
	</select>
</mapper>
