<?xml version="1.0" encoding="UTF-8"?>



<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wyzy.hospital.admin.mapper.HospitalDepartmentMapper">

  <resultMap id="hospitalDepartmentMap" type="com.wyzy.hospital.admin.api.entity.HospitalDepartment">
                  <id property="id" column="id"/>
                        <result property="departmentsId" column="departments_id"/>
                        <result property="hospitalId" column="hospital_id"/>
                        <result property="chiefid" column="chiefid"/>
                        <result property="createTime" column="create_time"/>
                        <result property="updateTime" column="update_time"/>
  </resultMap>


    <select id="getHosdepDetailBydepartmentsId" resultMap="hospitalDepartmentMap">
        select * from hospital_department where and departments_id = #{departmentsId}
    </select>

    <delete id="removeBydepartmentsId">
        delete from hospital_department
        where departments_id = #{departmentsId}
    </delete>
</mapper>
