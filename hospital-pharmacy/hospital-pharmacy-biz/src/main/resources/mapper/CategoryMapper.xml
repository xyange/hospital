<?xml version="1.0" encoding="UTF-8"?>



<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wyzy.hospital.pharmacy.mapper.CategoryMapper">

  <resultMap id="categoryMap" type="com.wyzy.hospital.pharmacy.entity.Category">
                  <id property="id" column="id"/>
                        <result property="pid" column="pid"/>
                        <result property="path" column="path"/>
                        <result property="name" column="name"/>
                        <result property="level" column="level"/>
                        <result property="picture" column="picture"/>
                        <result property="type" column="type"/>
                        <result property="url" column="url"/>
                        <result property="extra" column="extra"/>
                        <result property="delFlag" column="del_flag"/>
                        <result property="sort" column="sort"/>
                        <result property="createTime" column="create_time"/>
                        <result property="updateTime" column="update_time"/>
            </resultMap>

	<resultMap id="categoryProduct" type="com.wyzy.hospital.pharmacy.dto.CategoryProductDTO">
		<id property="id" column="id"/>
		<result property="pid" column="pid"/>
		<result property="name" column="name"/>
		<collection  property="products" ofType="com.wyzy.hospital.pharmacy.dto.ProductDTO">
			<id property="productId" column="product_id"/>
			<result property="shopId" column="shop_id"/>
			<result property="productImage" column="product_image"/>
			<result property="productName" column="product_name"/>
			<result property="cateId" column="cate_id"/>
		</collection>
	</resultMap>

	<select id="getShopProductTreeListByCate" resultMap="categoryProduct">
		SELECT pc.id,pc.pid,pc.`name`,pp.product_id,pp.shop_id,pp.product_image,pp.product_name,pp.cate_id
		FROM wyzy_pharmacy.ph_category as pc
				 left join ph_product pp on pc.id=pp.cate_id where pid=#{cateId} and shop_id=#{shopId};
	</select>
</mapper>
